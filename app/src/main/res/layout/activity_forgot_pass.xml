<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_back"
    tools:context="com.example.user.scooltracker.ForgotPassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100sp"
            android:text="Email"
            android:textColor="@color/white_grey"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="example@email.com"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/background_watermark"
            android:background="@drawable/round_recangle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="@color/white_grey"
            android:layout_marginTop="10sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:hint="+91 9747747702"
            android:backgroundTint="@color/background_watermark"
            android:background="@drawable/round_recangle"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginTop="15sp"
            android:background="@drawable/round_recangle"
            android:textColor="@color/white"
            android:backgroundTint="@color/bl1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/background_watermark"
            android:layout_marginTop="30sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already user ? Sign in"
                android:id="@+id/forgotPass_signIn"
                android:textColor="@color/white_grey"
                android:layout_gravity="center"
                />
            <View
                android:layout_width="1sp"
                android:layout_height="10sp"
                android:layout_margin="10sp"
                android:background="@color/white_grey"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
